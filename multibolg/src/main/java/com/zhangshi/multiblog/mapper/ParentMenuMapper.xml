<mapper namespace="com.zhangshi.multiblog.mapper.ParentMenuMapper">
  <resultMap id="BaseResultMap" type="com.zhangshi.multiblog.entity.ParentMenu">
    <id column="id" jdbcType="INTEGER" property="id" />
