      <if test="id != null">
        id,
      </if>
      <if test="parentMenuName != null">
        parent_menu_name,
      </if>
      <if test="parentMenuNo != null">
        parent_menu_no,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=INTEGER},
