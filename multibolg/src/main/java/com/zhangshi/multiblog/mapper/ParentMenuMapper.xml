      <if test="parentMenuName != null">
        parent_menu_name = #{parentMenuName,jdbcType=VARCHAR},
      </if>
      <if test="parentMenuNo != null">
        parent_menu_no = #{parentMenuNo,jdbcType=VARCHAR},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
